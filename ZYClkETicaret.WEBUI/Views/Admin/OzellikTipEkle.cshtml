
@{
    ViewBag.Title = "Ozellik Tipi Ekle";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
@using ZYClkETicaret.WEBUI.Models;
@model List<Kategori>

<br />
<br />
<br />
<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <br /> <br /> <br /> <br /> <br />
            <header class="panel-heading" style="margin-left:20px;">
                Özellik Tipi Ekle
            </header>
            <br /><br />
            <div class="panel-body">
                <form class="form-horizontal tasi-form" action="/Admin/OzellikTipEkle" method="post">
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">Adi</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" name="Adi">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">Aciklama</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" name="Aciklama">

                        </div>
                    </div>
                    <select class="form-control m-bot15" name="KategoriID">
                        @foreach (var kategori in Model)
                        {
                            <option value="@kategori.Id">@kategori.Adi</option>
                        }

                    </select>

                    <div class="form-group">
                        <div class="col-lg-offset-2 col-lg-10">
                            <button class="btn btn-danger" type="submit">Kaydet</button>
                        </div>
                    </div>
                </form>
            </div>
        </section>

    </div>
</div>



