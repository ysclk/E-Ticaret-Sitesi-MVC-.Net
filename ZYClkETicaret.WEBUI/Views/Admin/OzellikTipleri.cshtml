
@{
    ViewBag.Title = "Ozellik Tipleri";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

@using ZYClkETicaret.WEBUI.Models;

@model List<OzellikTip>


<br />
<br />
<br />
<br />
<br />
<br />


<section class="panel">

    <header class="panel-heading">
        Özellik Tipleri
    </header>
    <br />
    <br />
    <div class="panel-body">
        <div class="adv-table editable-table ">
            <div class="clearfix">
                <br />
                <div class="btn-group">
                    <a href="/Admin/OzellikTipEkle" class="btn btn-success"> Yeni Özellik Tipi<i class="icon-plus"></i></a>
                </div>

            </div>
            <div class="space15"></div>
            <br />
            <div class="table-responsive">

                <table class="table table-striped table-hover table-bordered" id="editable-sample">
                    <thead>
                        <tr>
                            <th>Özellik Tip Adi</th>
                            <th>Aciklama</th>
                            <th>Kategorisi</th>
                            <th>Güncelle</th>
                            <th>Sil</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var tip in Model)
                        {
                            <tr>
                                <td>@tip.Adi</td>
                                <td>@tip.Aciklama</td>
                                @if (@tip.Kategori != null)
                                {
                                    <td>@tip.Kategori.Adi</td>
                                }
                                else
                                {
                                    <td>null</td>
                                }
                                <td><a href="/Admin/OzellikGuncelle/@tip.Id"><i class="fa-solid fa-pen"></i></a></td>
                                <td><a href="/Admin/OzellikSil/@tip.Id"><i class="fa-solid fa-trash"></i></a></td>

                            </tr>
                        }


                    </tbody>
                </table>

            </div>
        </div>
    </div>
</section>


