
@{
    ViewBag.Title = "Markalar";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<br /><br /><br />
@using ZYClkETicaret.WEBUI.Models;

@model List<Marka>


@section head{
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css" rel="stylesheet" />
    <link href="~/Content/Admin/assets/fancybox/source/jquery.fancybox.css" rel="stylesheet" />
}
<section class="panel">
    <br /><br />
    <header class="panel-heading" style="margin-left:20px;">
        Markalar
    </header>
    <br />
    <div class="panel-body">
        <div class="adv-table editable-table ">
            <div class="clearfix">
                <br />
                <div class="btn-group">
                    <a href="/Admin/MarkaEkle" class="btn btn-success"> Yeni Marka<i class="icon-plus"></i></a>
                </div>

            </div>
            <div class="space15"></div>
            <br />
            <div class="table-responsive">

                <table class="table table-striped table-hover table-bordered" id="editable-sample">
                    <thead>
                        <tr>
                            <th>Marka Adi</th>
                            <th>Aciklama</th>
                            <th>Resmi Göster</th>
                            <th>Güncelle</th>
                            <th>Sil</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var marka in Model)
                        {
                            <tr>
                                <td>@marka.Adi</td>
                                <td>@marka.Aciklama</td>
                                @if (marka.Resim != null)
                                {
                                    <td>
                                        <a class="fancybox" rel="group" href="@marka.Resim.OrtaYol"><i class="fa-solid fa-eye"></i></a>
                                    </td>
                                }
                                else
                                {
                                    <td>
                                        <a class="fancybox"
                                           href="#"><i class="icon-eye-open"> </i></a>
                                    </td>

                                }
                                <td><a href="/Admin/MarkaGuncelle/@marka.Id"><i class="fa-solid fa-pen"></i></a></td>
                                <td><a href="/Admin/MarkaSil/@marka.Id"><i class="fa-solid fa-trash"></i></a></td>

                            </tr>
                        }




                    </tbody>
                </table>

            </div>
        </div>
    </div>
</section>

<script type="text/javascript" src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="~/Content/jquery.fancybox.min.js"></script>
<script type="text/javascript">
    jQuery(document).ready(function () {

        jQuery(".fancybox").click(function () {

            $.fancybox({
                'height': 600,
                'padding': 0,
                'width': 300,
                'type': 'iframe'
                
            });
        });
    });
</script>
