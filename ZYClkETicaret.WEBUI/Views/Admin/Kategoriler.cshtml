
@{
    ViewBag.Title = "Kategoriler";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

@using ZYClkETicaret.WEBUI.Models;

@model List<Kategori>

<br />
<br />
<br />


<section class="panel">
    <br />
    <br />
    <header class="panel-heading" style="margin-left:20px;">
        Kategoriler
    </header>
    <br />
    <div class="panel-body">
        <div class="adv-table editable-table ">
            <div class="clearfix">
                <br />
                <div class="btn-group">
                    <a href="/Admin/KategoriEkle" class="btn btn-success"> Yeni Kategori<i class="icon-plus"></i></a>
                </div>

            </div>
            <div class="space15"></div>
            <br />
            <div class="table-responsive">

                <table class="table table-striped table-hover table-bordered" id="editable-sample">
                    <thead>
                        <tr>
                            <th>Kategori Adi</th>
                            <th>Aciklama</th>
                            <th>Güncelle</th>
                            <th>Sil</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var kategori in Model)
                        {
                            <tr>
                                <td>@kategori.Adi</td>
                                <td>@kategori.Aciklama</td>

                                <td><a href="/Admin/KategoriGuncelle/@kategori.Id"><i class="fa-solid fa-pen"></i></a></td>
                                <td><a href="/Admin/KategoriSil/@kategori.Id"><i class="fa-solid fa-trash"></i></a></td>

                            </tr>
                        }


                    </tbody>
                </table>

            </div>
        </div>
    </div>
</section>


