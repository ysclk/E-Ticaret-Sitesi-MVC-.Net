
@{
    ViewBag.Title = "Kullanici Ekle";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}



<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <br />
            <br />

            <header class="panel-heading" style="margin-left:20px;">
                Kullanici Ekle
            </header>
            <br />
            <div class="panel-body">
                <form role="form" class="form-horizontal tasi-form" action="/Admin/KullaniciEkle" method="post">
                    <div class="form-group">
                        <label class="col-lg-2 control-label">Kullanici Adi</label>
                        <div class="col-lg-10">
                            <input type="text" placeholder="Kullanici Adi Giriniz" id="" class="form-control" name="KullaniciAdi">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-2 control-label">Parola</label>
                        <div class="col-lg-10">
                            <input type="password" placeholder="Parola Giriniz" id="" class="form-control" name="Parola">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-2 control-label">Email</label>
                        <div class="col-lg-10">
                            <input type="text" class="spinner-input form-control" placeholder="Email Giriniz" name="Email">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-2 control-label">Gizli Soru</label>
                        <div class="col-lg-10">
                            <input type="text" class="spinner-input form-control" placeholder="Gizli Soru Giriniz" name="GizliSoru">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-2 control-label">Gizli Cevap</label>
                        <div class="col-lg-10">
                            <input type="text" class="spinner-input form-control" placeholder="Gizli Cevap Giriniz" name="GizliCevap">
                        </div>
                    </div>



                    <div class="form-group">
                        <div class="col-lg-offset-2 col-lg-10">
                            <button class="btn btn-danger" type="submit">Kaydet</button>
                        </div>
                    </div>

                    <span style="color:red;" id="hata">@ViewBag.Mesaj</span>
                </form>
            </div>
        </section>
    </div>
</div>


