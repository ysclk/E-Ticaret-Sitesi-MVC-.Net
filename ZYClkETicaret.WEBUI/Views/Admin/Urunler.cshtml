
@{
    ViewBag.Title = "Urunler";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br />
<br />
<br />
@model List<ZYClkETicaret.WEBUI.Models.Urun>

<section class="panel">
    <br /><br />
    <header class="panel-heading" style="margin-left:20px;">
        Ürünler
    </header>
    <br />
    <div class="panel-body">
        <div class="adv-table editable-table ">
            <div class="clearfix">
                <br />
                <div class="btn-group">
                    <a href="/Admin/UrunEkle" class="btn btn-success"> Yeni Ürün<i class="icon-plus"></i></a>
                </div>

            </div>
            <div class="space15"></div>
            <br />
            <div class="table-responsive">

                <table class="table table-striped table-hover table-bordered" id="editable-sample">
                    <thead>
                        <tr>
                            <th>Ürün Adi</th>
                            <th>Aciklama</th>
                            <th>Alis fiyati</th>
                            <th>Satis Fiyati</th>
                            <th>Kategori</th>
                            <th>Marka</th>
                            <th>Eklenme Tarihi</th>
                            <th>Son Kullanma Tarihi</th>
                            <th>Resim</th>
                            <th>Güncelle</th>
                            <th>Sil</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var urun in Model)
                        {
                            <tr>
                                <td>@urun.Adi</td>
                                <td>@urun.Aciklama</td>
                                <td>@urun.AlisFiyat</td>
                                <td>@urun.SatisFiyat</td>
                                <td>@urun.Kategori.Adi</td>
                                <td>@urun.Marka.Adi</td>
                                <td>@urun.EklenmeTarihi</td>
                                <td>@urun.SonKullanmaTarihi</td>
                                <td><a href="/Admin/UrunResimEkle/@urun.Id"><i class="fa-sharp fa-solid fa-image"></i></a></td>
                                <td><a class="icon-pencil" href="/Admin/UrunGuncelle"><i class="fa-solid fa-pen"></i></a></td>
                                <td><a class="delete" href="/Admin/UrunSil"><i class="fa-solid fa-trash"></i></a></td>

                            </tr>
                        }


                    </tbody>
                </table>

            </div>
        </div>
    </div>
    <script type="text/javascript" src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

</section>
