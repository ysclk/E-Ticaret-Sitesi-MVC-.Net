
@{
    ViewBag.Title = "OzellikDegerleri";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

@model List<ZYClkETicaret.WEBUI.Models.OzellikDeger>

<br /><br /><br /> <br /><br />
<section class="panel">
    <header class="panel-heading">
        Özellik Degerleri
    </header>
    <br />
    <div class="panel-body">
        <div class="adv-table editable-table ">
            <div class="clearfix">
                <br />
                <div class="btn-group">
                    <a href="/Admin/OzellikDegerEkle" class="btn btn-success"> Yeni Özellik Degeri<i class="icon-plus"></i></a>
                </div>

            </div>
            <div class="space15"></div>
            <br />
            <div class="table-responsive">

                <table class="table table-striped table-hover table-bordered" id="editable-sample">
                    <thead>
                        <tr>
                            <th>Özellik Deger Adi</th>
                            <th>Aciklama</th>
                            <th>Tipi</th>
                            <th>Güncelle</th>
                            <th>Sil</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var deger in Model)
                        {
                            <tr>
                                <td>@deger.Adi</td>
                                <td>@deger.Aciklama</td>
                                @if (deger.OzellikTip != null)
                                {
                                    <td>@deger.OzellikTip.Adi</td>
                                }
                                else
                                {
                                    <td>null</td>
                                }
                                <td><a href="/Admin/OzellikDegerGuncelle/@deger.Id"><i class="fa-solid fa-pen"></i></a></td>
                                <td><a href="/Admin/OzellikDegerSil/@deger.Id"><i class="fa-solid fa-trash"></i></a></td>

                            </tr>
                        }


                    </tbody>
                </table>

            </div>
        </div>
    </div>
</section>