
@{
    ViewBag.Title = "Rol Ata";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<br />
<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <br /> <br /> <br /> <br /> <br />
            <header class="panel-heading" style="margin-left:20px;">
                Rol Ata
            </header>
            <br /><br />
            <div class="panel-body">
                <form class="form-horizontal tasi-form" action="/Admin/RolAta" method="post" role="form">
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">Kullanici Adi</label>
                        <div class="col-lg-10">
                            <select name="KullaniciAdi" class="form-control m-bot15">
                                @foreach (MembershipUser mu in ViewBag.Kullanicilar)
                                {
                                    <option value="@mu.UserName" id="@mu.ProviderUserKey">@mu.UserName</option>
                                   
                                }
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">Rol</label>
                        <div class="col-lg-10">
                            <select name="RolAdi" class="form-control m-bot15">
                                @foreach (string rol in ViewBag.Roller)
                                {
                                    <option value="@rol">@rol</option>

                                }
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-offset-2 col-lg-10">
                            <button class="btn btn-danger" type="submit">Kaydet</button>
                        </div>
                    </div>
                </form>
            </div>
        </section>

    </div>
</div>
